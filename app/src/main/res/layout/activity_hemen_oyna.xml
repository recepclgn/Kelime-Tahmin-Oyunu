<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/arkaplan"
    tools:context=".hemen_oyna">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@color/ustbolum">

        <ImageView
            android:id="@+id/hemenoyna_back"
            android:onClick="hemenoyna_back"
            android:layout_marginTop="22dp"
            android:layout_width="95dp"
            android:layout_height="78dp"
            android:src="@drawable/back" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/ayarlar"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginTop="20dp"
        android:contentDescription="TODO"
        android:src="@drawable/tahimin_et" />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/buzrengi"
        android:text="Kelimeyi Tahim Et"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_guess"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="word"
            android:textColor="@color/buzrengi"
            android:textSize="25dp"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="163dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/buzrengi"
            android:text=""
            android:textSize="25dp" />


    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:layout_marginTop="5dp"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/ımage_balyoz"
           android:onClick="ımage_balyoz"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:src="@drawable/item_balyoz"/>
       <ImageView
           android:id="@+id/ımage_check"
           android:onClick="ımage_check"
           android:layout_width="200dp"
           android:layout_height="match_parent"
           android:src="@drawable/check"/>
       <ImageView
           android:id="@+id/ımage_dinamit"
           android:onClick="ımage_dinamit"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:src="@drawable/item_dinamit" />
   </LinearLayout>

    <ImageView
        android:id="@+id/ımage_new"
        android:onClick="ımage_new"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/yeni" />


</LinearLayout>