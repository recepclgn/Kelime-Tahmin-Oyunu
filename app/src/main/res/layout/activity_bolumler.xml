<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bolumler"
    android:background="@color/arkaplan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@color/ustbolum">
        <ImageView
            android:id="@+id/bolum_back"
            android:onClick="bolum_back"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:src="@drawable/back"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bolum"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/meslek"
        android:onClick="meslek"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/meslek_menu"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/renk"
        android:onClick="renk"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/renkler_menu"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/yemek"
            android:onClick="yemek"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/yemek_menu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>
        <ImageView android:id="@+id/meyve"
            android:onClick="meyve"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/meyveler_menu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hayvan"
            android:onClick="hayvan"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/hayvan_menu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/ulke"
            android:onClick="ulke   "
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ulke_menu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
</LinearLayout>